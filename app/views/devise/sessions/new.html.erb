<section class="container-signin">
  <div class="login-container-signin">
    <div class="circle-signin circle-one-signin"></div>
    <h2 class="opacity-signin">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-container-signin">
        <div class="field-signin">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-field-signin" %>
        </div>

        <div class="field-signin">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "input-field-signin" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="register-forget-signin">
            <div class="remember-signin">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
            <div class="forgetpass-signin">
              <%= link_to "Forgot your password?", new_password_path(resource_name) %>
            </div>
          </div>
        <% end %>

        <div class="theme-btn-container-signin">
          <div class="opacity-signin">
            <%= f.submit "Log in", class: "submit-btn-signin" %>
            <%= link_to "Sign up", new_registration_path(resource_name), class: "theme-btn-signin" %>
          </div>
        </div>
      </div>
    <% end %>

  </div>
</section>

<style>
  :root {
    --background-signin: #1a1a2e;
    --color-signin: #ffffff;
    --primary-color-signin: #0f3460;
  }

    a {
    text-decoration: none;
    color: var(--color);
  }

  h2 {
    font-size: 2rem;
    text-align: center;
    margin-bottom: 2rem;
  }

  .container-signin {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 50%;
    margin-top: 60px;
    flex-direction: column;
  }

  .login-container-signin {
    position: relative;
    width: 100%;
    max-width: 400px;
    margin-top: 40px;
  }

  .form-container-signin {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 10px;
    padding: 2rem;
    box-shadow: 0 0 36px 1px rgba(0, 0, 0, 0.2);
    backdrop-filter: blur(20px);
    z-index: 99;
    margin-bottom: 50px;
  }

  .field-signin {
    margin-bottom: 1rem;
    display: flex;
    flex-direction: column;
  }

  .login-container-signin form input {
    width: 100%;
    padding: 12px;
    border-radius: 5px;
    border: 1px solid #ccc;
    background-color: #333;
    color: var(--color);
    font-size: 16px;
    letter-spacing: 0.5px;
    outline: none;
    margin-bottom: 1rem;
  }

  .login-container-signin form input:focus {
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.15);
    border-color: var(--primary-color);
  }

  .login-container-signin form button {
    width: 100%;
    padding: 14px;
    background-color: var(--primary-color);
    color: var(--color);
    border: none;
    border-radius: 5px;
    font-size: 18px;
    font-weight: bold;
    cursor: pointer;
    transition: all 0.2s ease-in-out;
  }

  .login-container-signin form button:hover {
    background-color: #003c72;
  }

  .theme-btn-container-signin {
    text-align: center;
  }

  .circle-signin {
    position: absolute;
    width: 8rem;
    height: 8rem;
    background: var(--primary-color);
    border-radius: 50%;
    z-index: -1;
  }

  .circle-one-signin {
    top: 1.3rem;
    left: -3rem;
  }
 
  .circle-two-signin {
    bottom: -3rem;
    right: -3rem;
  }

  .opacity-signin {
    opacity: 1;
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  @media (max-width: 480px) {
    .container-signin {
      height: auto;
      padding: 20px;
    }

    .form-container-signin {
      padding: 1.5rem;
    }
  }

  .register-forget-signin {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
  }

  .remember-signin,
  .forgetpass-signin {
    display: flex;
    gap: 10px;
  }

  .forgetpass-signin {
    margin-left: 100px; /* Added some spacing between Remember Me and Forgot Password */
  }

</style>
