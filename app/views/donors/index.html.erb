  .details-title {
    font-size: 32px;
    font-weight: bold;
    text-align: center;
    margin-top: 40px;
  }

  /* Link Back Button */
  .btn-back {
    display: inline-block;
    margin-bottom: 20px;
    padding: 10px 20px;
