    color: white;
    font-size: 16px;
    text-decoration: none;
    border-radius: 5px;
    transition: background-color 0.3s;
    margin-left: 1000px;
     }

  .btn-back:hover {
    background-color: #0056b3;
  }

  /* Section Title Styles */
  .section-title {
    font-size: 24px;
    font-weight: bold;
    margin-top: 40px;
    margin-bottom: 20px;
  }

  /* Table Styles */
  .details-table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
  }

  .details-table th, .details-table td {
    padding: 12px;
    text-align: left;
    border: 1px solid #ddd;
  }

  .details-table th {
    background-color: #fffff;
  }

  /* Button Styles */
  .btn-show {
