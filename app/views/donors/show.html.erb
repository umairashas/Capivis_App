  .donor-details {
    margin-bottom: 20px;
    padding: 20px;
    background-color: #fffff;
    border-radius: 5px;
  }

  .donor-details h3 {
    font-size: 1.8rem;
    margin-bottom: 20px;
  }

  .donor-details p {
    font-size: 1.1rem;
    margin-bottom: 10px;
  }

  .donor-details strong {
    font-weight: bold;
  }

  .text-center {
    text-align: center;
    margin-bottom: -100px;
  }

  .mt-5 {
    margin-top: 3rem;
  }

  .ms-2 {
    margin-left: 0.5rem;
  }

  .mb-4 {
    margin-bottom: 1.5rem;
  }

  .btn-secondary {
    background-color: #6c757d;
    color: #fff;
  }
  .con{
    display:flex ;
    flex-direction: column;
  }
  .container{
    margin-top: 100px;
  }
