<div class="container">
  <h1 class="page-title">Centres</h1>

  <div class="button-container">
    <%= link_to 'Add New Centre', new_centre_path, class: 'btn-add' %>
    <%= link_to 'Back', admin_dashboard_path, class: 'btn-back' %>
  </div>

  <table class="centres-table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Pincode</th>
        <th>Location</th>
        <th>Phone Number</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% if @centres.any? %>
        <% @centres.each do |centre| %>
          <tr>
            <td><%= centre.name %></td>
            <td><%= centre.pincode %></td>
            <td><%= centre.location %></td>
            <td><%= centre.phone_number %></td>
            <td>
              <%= link_to 'View', centre_path(centre), class: 'btn-view' %>
              <%= link_to 'Edit', edit_centre_path(centre), class: 'btn-edit' %>
              <%= link_to 'Delete', centre_path(centre),  data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn-delete' %>
            </td>
          </tr>
        <% end %>
      <% else %>
        <!-- Placeholder for empty table -->
        <tr>
          <td colspan="5" class="no-data">No centres available. Please add a new centre.</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<style>
  /* Page Title */
  /* General Reset */
* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
  font-family: Arial, sans-serif;
}

/* Container */
.container {
  max-width: 1200px;
  margin: 50px auto;
  padding: 20px;
  text-align: center;
}

/* Page Title */
.page-title {
  font-size: 32px;
  font-weight: bold;
  margin-bottom: 20px;
  color: white;
}

/* Button Container */
.button-container {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  margin-bottom: 20px;
  gap: 10px;
}

/* Button Styles */
.btn-add, 
.btn-back, 
.btn-view, 
.btn-edit, 
.btn-delete {
  text-decoration: none;
  padding: 10px 15px;
  font-size: 14px;
  border-radius: 5px;
  font-weight: bold;
  text-align: center;
  border: none;
  cursor: pointer;
  transition: all 0.3s ease-in-out;
  display: inline-block;
}

/* Button Colors */
.btn-add {
  background-color: #28a745;
  color: white;
}

.btn-add:hover {
  background-color: #218838;
}

.btn-back {
  background-color: #007bff;
  color: white;
}

.btn-back:hover {
  background-color: #0056b3;
}

.btn-view {
  background-color: #17a2b8;
  color: white;
}

.btn-view:hover {
  background-color: #117a8b;
}

.btn-edit {
  background-color: #ffc107;
  color: black;
}

.btn-edit:hover {
  background-color: #e0a800;
}

.btn-delete {
  background-color: #dc3545;
  color: white;
}

.btn-delete:hover {
  background-color: #c82333;
}

/* Table Styling */
.centres-table {
  width: 100%;
  border-collapse: collapse;
  margin-top: 20px;
  background-color: transparent;
  box-shadow: 0 4px 8px none;
  border-radius: 8px;
  overflow: hidden;
}

.centres-table th, 
.centres-table td {
  padding: 15px;
  text-align: left;
  border: 1px solid #ddd;
}

.centres-table th {
  background-color: transparent;
  font-weight: bold;
}

/* Empty Table Message */
.no-data {
  text-align: center;
  color: gray;
  font-style: italic;
  padding: 15px;
}

/* Responsive Design */
@media screen and (max-width: 768px) {
  .button-container {
    flex-direction: column;
    align-items: center;
    gap: 10px;
  }

  .centres-table th, 
  .centres-table td {
    padding: 10px;
  }

  .page-title {
    font-size: 28px;
  }
}

</style>
