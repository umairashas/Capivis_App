<h1>Centres</h1>

<%= link_to 'Add New Centre', new_centre_path, class: 'btn btn-primary' %>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Pincode</th>
      <th>Location</th>
      <th>Phone Number</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @centres.each do |centre| %>
      <tr>
        <td><%= centre.name %></td>
        <td><%= centre.pincode %></td>
        <td><%= centre.location %></td>
        <td><%= centre.phone_number %></td>
        <td>
          <%= link_to 'View', centre_path(centre), class: 'btn btn-info btn-sm' %>
          <%= link_to 'Edit', edit_centre_path(centre), class: 'btn btn-warning btn-sm' %>
          <%= button_to 'Delete', centre_path(centre), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
