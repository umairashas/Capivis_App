<div class="con">
  <div class="Address">
    <h1><%= @centre.name %></h1>
    <div>
      <p><strong>Pincode:</strong> <%= @centre.pincode %></p>
      <p><strong>Location:</strong> <%= @centre.location %></p>
      <p><strong>Phone Number:</strong> <%= @centre.phone_number %></p>
      <p><strong>Total Donors:</strong> <%= @donor_count %></p>
    </div>
  </div>

  <div class="donar">
    <h4>Associated Donors</h4>
    <% if @donors.any? %>
      <ul>
        <% @donors.each do |donor| %>
          <li>
            <p><strong>Donor Name:</strong> <%= donor.name %></p>
            <p><strong>Gender:</strong> <%= donor.gender %></p>
            <p><strong>Birth Date:</strong> <%= donor.birth_date %></p>
            <p><strong>Phone Number:</strong> <%= donor.phone_number %></p>
            <p><strong>Address:</strong> <%= donor.address_line1 %></p>
            <p><strong>City:</strong> <%= donor.city %></p>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p>No donors found for this center.</p>
    <% end %>

    <%= link_to 'Back to Centres', centres_path, class: 'btn btn-secondary' %>
  </div>
</div>

<style>
  /* General Reset */
* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
  font-family: Arial, sans-serif;
}

/* Main Container */
.con {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 40px;
  max-width: 1200px;
  margin-top: 100px;
  padding: 20px;
}

/* Address & Donor Sections */
.Address, .donar {
  flex: 1;
  padding: 20px;
  background-color: transparent;
  border-radius: 8px;
    border: 1px solid #ddd;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

/* Title Styling */
h1, h4 {
  color: white;
  margin-bottom: 15px;
}

/* Donor List */
.donar ul {
  list-style: none;
  padding: 0;
}

.donar li {
  margin-bottom: 20px;
  padding: 15px;
  background-color: transparent;
  border: 1px solid #ddd;
  border-radius: 8px;
}

/* Button */
.btn-secondary {
  display: inline-block;
  margin-top: 20px;
  padding: 10px 20px;
  background-color: #007bff;
  color: white;
  text-decoration: none;
  border-radius: 5px;
  text-align: center;
  transition: background 0.3s ease-in-out;
}

.btn-secondary:hover {
  background-color: #0056b3;
}

/* Responsive Design */
@media screen and (max-width: 768px) {
  .con {
    flex-direction: column;
    align-items: center;
    gap: 20px;
  }

  .Address, .donar {
    width: 100%;
  }
}
</style>
