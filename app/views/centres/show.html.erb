<h1><%= @centre.name %></h1>

<p><strong>Pincode:</strong> <%= @centre.pincode %></p>
<p><strong>Location:</strong> <%= @centre.location %></p>
<p><strong>Phone Number:</strong> <%= @centre.phone_number %></p>
<p><strong>Total Donors:</strong> <%= @donor_count %></p>

<h2>Donors</h2>
<% if @donors.any? %>
  <ul>
    <% @donors.each do |donor| %>
      <li><%= donor.name %> - <%= donor.email %></li>
    <% end %>
  </ul>
<% else %>
  <p>No donors found for this center.</p>
<% end %>

<%= link_to 'Back to Centres', centres_path, class: 'btn btn-secondary' %>
<%= link_to 'Edit Centre', edit_centre_path(@centre), class: 'btn btn-primary' %>
