<!-- Unified Button Actions -->
<div class="d-flex justify-content-center align-items-center mb-4 gap-3">
</div>

<!-- Page Title -->
<h1 class="text-center mb-5">All Donors</h1>

<!-- Donors Table -->
<div class="table-responsive">
  <table class="table table-hover table-striped">
    <thead class="thead-dark">
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Gender</th>
        <th>Phone Number</th>
        <th class="text-center">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @donors.each do |donor| %>
        <tr>
          <td><%= donor.first_name %></td>
          <td><%= donor.last_name %></td>
          <td><%= donor.gender %></td>
          <td><%= donor.phone_number %></td>
          <td class="text-center">
            <!-- Flexbox for Action Buttons -->
            <div class="d-flex justify-content-center gap-2">
              <% if can? :update, donor %>
                <%= link_to 'Edit', edit_donor_path(donor), class: 'btn btn-sm btn-warning' %>
              <% end %>
              <% if can? :destroy, donor %>
                <%= button_to 'Delete', donor_path(donor), method: :delete, class: 'btn btn-sm btn-danger', data: { confirm: "Are you sure?" } %>
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
