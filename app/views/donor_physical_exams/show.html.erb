  <div class="containe">
    <h1>Donor Physical Exam Details</h1>

    <div class="details">
      <p>
        <strong>Flipchart:</strong>
        <%= @donor_physical_exam.flipchart? ? 'Yes' : 'No' %>
      </p>
      <p>
        <strong>Donor Consents:</strong>
        <%= @donor_physical_exam.donor_consents? ? 'Yes' : 'No' %>
      </p>
      <p>
        <strong>High Risk Questionnaire Score:</strong>
        <%= @donor_physical_exam.high_risk_questionnaire_score %>
      </p>
      <p>
        <strong>Body Map:</strong>
        <%= @donor_physical_exam.body_map.present? ? 'Available' : 'Not Available' %>
      </p>
      <p>
        <strong>Physical Exam:</strong>
        <%= @donor_physical_exam.physical_exam? ? 'Yes' : 'No' %>
      </p>
    </div>

    <div class="actions">
      <%= link_to 'Edit', edit_donor_physical_exam_path(@donor_physical_exam), class: 'btn btn-warning' %>
      <%= link_to 'Back', :back, class: 'btn btn-secondary' %>
    </div>
  </div>
  <style>
    /* General Reset */
  * {
    margin: 0;
    padding: 0;
    font-family: Arial, sans-serif;
  }

  /* Container Styling */
  .containe {
    margin-top: 15%;
    padding: 20px;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;    
    border-radius: 8px;
    border: 2px solid white;
  }


  h1 {
    font-size: 24px;
    color: white;
    margin-bottom: 20px;
  }

  /* Details Section */
  .details p {
    font-size: 16px;
    color: white;
    margin-bottom: 10px;
  }

  strong {
    font-weight: bold;
    color: white;
  }

  /* Button Styling */
  .btn {
    padding: 8px 16px;
    border: none;
    border-radius: 4px;
    text-decoration: none;
    font-size: 14px;
    cursor: pointer;
    display: inline-block;
    transition: background-color 0.3s ease;
  }

  .btn-warning {
    background-color: #ffc107;
    color: black;
  }

  .btn-warning:hover {
    background-color: #e0a800;
  }

  .btn-secondary {
    background-color: #6c757d;
    color: white;
  }

  .btn-secondary:hover {
    background-color: #5a6268;
  }

  /* Actions Section */
  .actions {
    display: flex;
    gap: 20px;
    margin-top: 20px;
  }

  /* Responsive Design */
  @media screen and (max-width: 768px) {
    .container {
      margin-top: 100px;
      padding: 15px;
    }

    h1 {
      font-size: 22px;
    }

    .details p {
      font-size: 14px;
    }

    .btn {
      font-size: 12px;
      padding: 6px 12px;
    }

    .actions {
      gap: 10px;
    }
  } 
  </style>