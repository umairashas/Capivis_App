  <div class="header">
    <h1>Donor Screenings</h1>
    <%= link_to 'Back', current_user.operator? ? operators_path : admin_dashboard_path, class: 'btn btn-primary' %>
  </div>

  <table class="custom-table">
    <thead>
      <tr>
        <th>Centre Name</th>
        <th>Donor Name</th>
        <th>Height (cm)</th>
        <th>Weight (kg)</th>
        <th>Blood Pressure</th>
        <th>Temperature (Â°C)</th>
        <th>Hematocrit (%)</th>
        <th>Total Protein (g/dL)</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @donor_screenings.each do |screening| %>
        <tr>
          <td><%= screening.centre.name %></td>
          <td><%= screening.donor.first_name %> <%= screening.donor.last_name %></td>
          <td><%= screening.donor_height %></td>
          <td><%= screening.donor_weight %></td>
          <td><%= screening.donor_blood_pressure %></td>
          <td><%= screening.donor_temperature %></td>
          <td><%= screening.hematocrit %></td>
          <td><%= screening.total_protein %></td>
          <td>
          <div class= "button">
            <%= link_to "Show", donor_screening_path(screening), class: "btn btn-info" %>
            <% if current_user.operator? %>
              <%= link_to "Edit", edit_donor_screening_path(screening), class: "btn btn-warning" %>
            <% end %>
            
            <% if current_user.admin? %>
              <%= link_to "Delete", donor_screening_path(screening), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger" %>
            <% end %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>


<style>
/* General Reset */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: Arial, sans-serif;
}

/* Header Section */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 90px;
  padding: 0 20px;
}

h1 {
  font-size: 24px;
  color: white;
}

/* Table Styling */
.custom-table {
  width: 100%;
  border-collapse: collapse;
  margin-top: 20px;
}

.custom-table th, .custom-table td {
  padding: 12px;
  text-align: left;
  border: 1px solid #ddd;
}

.custom-table th {
  background-color: transparent;
  color: white;
  font-weight: bold;
}

/* Button Styling */
.btn {
  padding: 8px 12px;
  border: none;
  border-radius: 4px;
  text-decoration: none;
  font-size: 14px;
  cursor: pointer;
  display: inline-block;
  transition: background-color 0.3s ease;
}

.btn-primary {
  background-color: #007bff;
  color: white;
}

.btn-primary:hover {
  background-color: #0056b3;
}

.btn-info {
  background-color: #17a2b8;
  color: white;
}

.btn-info:hover {
  background-color: #117a8b;
}

.btn-warning {
  background-color: #ffc107;
  color: black;
}

.btn-warning:hover {
  background-color: #e0a800;
}

.btn-danger {
  background-color: #dc3545;
  color: white;
}

.btn-danger:hover {
  background-color: #c82333;
}

.button{
display: flex;
flex-direction: row;
gap: 10px; 
}

/* Action Buttons */
.action-buttons {
  display: flex;
  gap: 8px;
}

/* Responsive Design */
@media screen and (max-width: 768px) {
  .header {
    flex-direction: column;
    align-items: flex-start;
    margin-top: 20px;
  }

  .custom-table {
    display: block;
    overflow-x: auto;
    white-space: nowrap;
  }

  .btn {
    font-size: 12px;
    padding: 6px 10px;
  }
}
</style>
