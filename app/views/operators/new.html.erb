<h1>Verify Donor</h1>

<%= form_with model: @operator, local: true do |form| %>
  <div class="form-group">
    <%= form.label :acceptable_arm_check, "Acceptable Arm Check" %>
    <%= form.text_field :acceptable_arm_check, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= form.label :donor_height, "Donor Height (Annual)" %>
    <%= form.text_field :donor_height, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= form.label :donor_weight, "Donor Weight" %>
    <%= form.text_field :donor_weight, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= form.label :donor_blood_pressure, "Donor Blood Pressure (Sys/Dia/Pulse)" %>
    <%= form.text_field :donor_blood_pressure, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= form.label :donor_temperature, "Donor Temperature" %>
    <%= form.text_field :donor_temperature, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= form.label :fingerstick, "Fingerstick (Timestamp)" %>
    <%= form.datetime_field :fingerstick, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= form.label :hematocrit, "Hematocrit" %>
    <%= form.text_field :hematocrit, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= form.label :total_protein, "Total Protein" %>
    <%= form.text_field :total_protein, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= form.submit 'Verify Donor', class: 'btn btn-primary' %>
  </div>
<% end %>
